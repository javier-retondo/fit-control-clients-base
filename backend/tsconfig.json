{
   "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node"
   },
   "include": [
      "src/**/*.ts",
      "src/infrastructure/database/type-orm/entities/headquarter-schedule.entity.tsts"
   ],
   "exclude": ["node_modules"]
}
